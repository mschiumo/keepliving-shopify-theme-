{% comment %}
  Order template
{% endcomment %}

<div class="customer order">
  <h1 class="order__title">{{ 'customer.order.title' | t: name: order.name }}</h1>

  <a href="{{ routes.account_url }}" class="order__return">{{ 'customer.account.return' | t }}</a>

  {% if order.cancelled %}
    <div class="order__cancelled">
      <h2>{{ 'customer.order.cancelled' | t }}</h2>
      <p>{{ 'customer.order.cancelled_date' | t: date: order.cancelled_at | date: format: 'date_at_time' }}</p>
      <p>{{ order.cancel_reason_label }}</p>
    </div>
  {% endif %}

  <div class="order__content">
    <div class="order__items">
      <table class="order__table">
        <thead>
          <tr>
            <th>{{ 'customer.order.product' | t }}</th>
            <th>{{ 'customer.order.sku' | t }}</th>
            <th>{{ 'customer.order.price' | t }}</th>
            <th>{{ 'customer.order.quantity' | t }}</th>
            <th>{{ 'customer.order.total' | t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for line_item in order.line_items %}
            <tr>
              <td>
                {{ line_item.title | link_to: line_item.product.url }}
                {% if line_item.fulfillment %}
                  <div class="order__fulfillment">
                    <span>{{ 'customer.order.fulfilled' | t }} {{ line_item.fulfillment.created_at | date: format: 'date' }}</span>
                    {% if line_item.fulfillment.tracking_number %}
                      <a href="{{ line_item.fulfillment.tracking_url }}">
                        {{ line_item.fulfillment.tracking_number }}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
              </td>
              <td>{{ line_item.sku }}</td>
              <td>{{ line_item.original_price | money }}</td>
              <td>{{ line_item.quantity }}</td>
              <td>{{ line_item.final_line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4">{{ 'customer.order.subtotal' | t }}</td>
            <td>{{ order.line_items_subtotal_price | money }}</td>
          </tr>

          {% for discount in order.cart_level_discount_applications %}
            <tr>
              <td colspan="4">
                {{ 'customer.order.discount' | t }}
                <span>{{ discount.title }}</span>
              </td>
              <td>-{{ discount.total_allocated_amount | money }}</td>
            </tr>
          {% endfor %}

          {% for shipping_method in order.shipping_methods %}
            <tr>
              <td colspan="4">
                {{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})
              </td>
              <td>{{ shipping_method.price | money }}</td>
            </tr>
          {% endfor %}

          {% for tax_line in order.tax_lines %}
            <tr>
              <td colspan="4">
                {{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)
              </td>
              <td>{{ tax_line.price | money }}</td>
            </tr>
          {% endfor %}

          <tr>
            <td colspan="4"><strong>{{ 'customer.order.total' | t }}</strong></td>
            <td><strong>{{ order.total_price | money_with_currency }}</strong></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="order__addresses">
      <div class="order__billing-address">
        <h2>{{ 'customer.order.billing_address' | t }}</h2>
        <p>{{ 'customer.order.payment_status' | t }}: {{ order.financial_status_label }}</p>
        {{ order.billing_address | format_address }}
      </div>

      <div class="order__shipping-address">
        <h2>{{ 'customer.order.shipping_address' | t }}</h2>
        <p>{{ 'customer.order.fulfillment_status' | t }}: {{ order.fulfillment_status_label }}</p>
        {{ order.shipping_address | format_address }}
      </div>
    </div>
  </div>
</div>
